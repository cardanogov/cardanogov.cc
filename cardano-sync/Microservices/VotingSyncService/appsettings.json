{
 "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=YOUR_DB_HOST;Port=YOUR_DB_PORT;Database=YOUR_DB_NAME;Username=YOUR_DB_USERNAME;Password=YOUR_DB_PASSWORD;Include Error Detail=true;Maximum Pool Size=30;Minimum Pool Size=5;Timeout=60;CommandTimeout=120;Keepalive=30;TcpKeepAliveTime=30;TcpKeepAliveInterval=5;",
    "BackupDatabase1": "Host=YOUR_BACKUP_DB_HOST;Port=YOUR_BACKUP_DB_PORT;Database=YOUR_BACKUP_DB_NAME;Username=YOUR_BACKUP_DB_USERNAME;Password=YOUR_BACKUP_DB_PASSWORD;Include Error Detail=true;Maximum Pool Size=20;Minimum Pool Size=2;Timeout=60;CommandTimeout=120;Keepalive=30;TcpKeepAliveTime=30;TcpKeepAliveInterval=5;"
  },
  "DatabaseSync": {
    "Schema": "grest",
    "MaxRetries": 5,
    "RetryDelayMs": 2000,
    "ConnectionTimeoutSeconds": 60,
    "CommandTimeoutSeconds": 120,
    "EnableFailover": true,
    "FailoverOrder": ["BackupDatabase1"],
    "CircuitBreakerThreshold": 3,
    "CircuitBreakerTimeoutMinutes": 5,
    "EnableConnectionPooling": true,
    "HealthCheckIntervalMinutes": 2,
    "MaxConcurrentDbOperations": 8
  },
  "Redis": { "ConnectionString": "localhost:6379" },
  "VoteListSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": true,
    "DailyCronExpression": "0 14 0 * * ?",
    "Priority": 1,
    "Description": "Syncs vote list data - runs after proposal votes are available"
  },
  "VoterProposalListSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 16 0 * * ?",
    "Priority": 2,
    "Description": "Syncs voter proposal list data - runs after VoteList"
  }
}
