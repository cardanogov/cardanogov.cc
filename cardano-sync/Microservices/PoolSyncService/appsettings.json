{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-pool-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=YOUR_DB_HOST;Port=YOUR_DB_PORT;Database=YOUR_DB_NAME;Username=YOUR_DB_USERNAME;Password=YOUR_DB_PASSWORD;Include Error Detail=true;Maximum Pool Size=8;Minimum Pool Size=0;Timeout=120;CommandTimeout=600;Keepalive=60;TcpKeepAliveTime=60;TcpKeepAliveInterval=10;",
    "BackupDatabase1": "Host=YOUR_BACKUP_DB_HOST;Port=YOUR_BACKUP_DB_PORT;Database=YOUR_BACKUP_DB_NAME;Username=YOUR_BACKUP_DB_USERNAME;Password=YOUR_BACKUP_DB_PASSWORD;Include Error Detail=true;Maximum Pool Size=8;Minimum Pool Size=0;Timeout=120;CommandTimeout=600;Keepalive=60;TcpKeepAliveTime=60;TcpKeepAliveInterval=10;"
  },
  "DatabaseSync": {
    "Schema": "grest",
    "MaxRetries": 3,
    "RetryDelayMs": 5000,
    "ConnectionTimeoutSeconds": 120,
    "CommandTimeoutSeconds": 600,
    "EnableFailover": true,
    "FailoverOrder": ["BackupDatabase1"],
    "CircuitBreakerThreshold": 3,
    "CircuitBreakerTimeoutMinutes": 5,
    "EnableConnectionPooling": true,
    "HealthCheckIntervalMinutes": 2,
    "MaxConcurrentDbOperations": 8
  },
  "Redis": { "ConnectionString": "localhost:6379" },
  "PoolListSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 40 0 * * ?",
    "Priority": 1,
    "Description": "Syncs pool list information - runs after drep data is available"
  },
  "PoolMetadataSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 41 0 * * ?",
    "Priority": 2,
    "Description": "Syncs pool metadata - runs after PoolList"
  },
  "PoolStakeSnapshotSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 43 0 * * ?",
    "Priority": 3,
    "Description": "Syncs pool stake snapshots - runs after PoolMetadata"
  },
  "PoolDelegatorsSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 50 0 * * ?",
    "Priority": 4,
    "Description": "Syncs pool delegators information - runs after PoolStakeSnapshot"
  },
  "PoolVotingPowerHistorySyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": true,
    "DailyCronExpression": "0 26 2 * * ?",
    "Priority": 5,
    "Description": "Syncs pool voting power history - runs after PoolDelegators"
  },
  "PoolUpdatesSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 40 2 * * ?",
    "Priority": 6,
    "Description": "Syncs pool updates information - runs after PoolVotingPowerHistory"
  },
  "PoolInformationSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 50 2 * * ?",
    "Priority": 7,
    "Description": "Syncs pool information - runs after PoolUpdates"
  },
  "UtxoInfoSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 5 3 * * ?",
    "Priority": 8,
    "Description": "Syncs UTXO info for delegation transactions - runs after PoolInformation"
  }
}
