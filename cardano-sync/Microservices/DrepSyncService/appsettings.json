{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=YOUR_DB_HOST;Port=YOUR_DB_PORT;Database=YOUR_DB_NAME;Username=YOUR_DB_USERNAME;Password=YOUR_DB_PASSWORD;Include Error Detail=true;Maximum Pool Size=30;Minimum Pool Size=5;Timeout=60;CommandTimeout=120;Keepalive=30;TcpKeepAliveTime=30;TcpKeepAliveInterval=5;",
    "BackupDatabase1": "Host=YOUR_BACKUP_DB_HOST;Port=YOUR_BACKUP_DB_PORT;Database=YOUR_BACKUP_DB_NAME;Username=YOUR_BACKUP_DB_USERNAME;Password=YOUR_BACKUP_DB_PASSWORD;Include Error Detail=true;Maximum Pool Size=20;Minimum Pool Size=2;Timeout=60;CommandTimeout=120;Keepalive=30;TcpKeepAliveTime=30;TcpKeepAliveInterval=5;"
  },
  "DatabaseSync": {
    "Schema": "grest",
    "MaxRetries": 5,
    "RetryDelayMs": 2000,
    "ConnectionTimeoutSeconds": 60,
    "CommandTimeoutSeconds": 120,
    "EnableFailover": true,
    "FailoverOrder": ["BackupDatabase1"],
    "CircuitBreakerThreshold": 3,
    "CircuitBreakerTimeoutMinutes": 5,
    "EnableConnectionPooling": true,
    "HealthCheckIntervalMinutes": 2,
    "MaxConcurrentDbOperations": 8
  },
  "Redis": { "ConnectionString": "localhost:6379" },
  "QueueSettings": {
    "UseEnhancedQueue": true,
    "MaxConcurrentJobs": 10,
    "Description": "Enhanced queue with priority, retry, and rate limiting"
  },
  "DrepListSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 18 0 * * ?",
    "Priority": 1,
    "Description": "Syncs DRep list data - runs after voting data is available"
  },
  "DrepInfoSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 19 0 * * ?",
    "Priority": 2,
    "Description": "Syncs DRep info data - runs after DrepList"
  },
  "DrepMetadataSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 20 0 * * ?",
    "Priority": 3,
    "Description": "Syncs DRep metadata - runs after DrepInfo"
  },
  "DrepVotingPowerHistorySyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 22 0 * * ?",
    "Priority": 4,
    "Description": "Syncs DRep voting power history - runs after DrepMetadata"
  },
  "DrepEpochSummarySyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 24 0 * * ?",
    "Priority": 5,
    "Description": "Syncs DRep epoch summary - runs after DrepVotingPowerHistory"
  },
  "DrepDelegatorsSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 25 0 * * ?",
    "Priority": 6,
    "Description": "Syncs DRep delegators - runs after DrepEpochSummary"
  },
  "DrepUpdatesSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 28 0 * * ?",
    "Priority": 7,
    "Description": "Syncs DRep registration/deregistration updates - runs after DrepDelegators"
  },
  "AccountUpdatesSyncJob": {
    "EnableDailyTrigger": true,
    "EnableOnStartup": false,
    "DailyCronExpression": "0 33 0 * * ?",
    "Priority": 8,
    "Description": "Syncs account updates for stake addresses - runs after DrepUpdates"
  }
}