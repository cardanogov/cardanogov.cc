# Environment Variables Template for Cardano Sync System
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=cardano
DB_USERNAME=your_database_username
DB_PASSWORD=your_secure_database_password

# Backup Database (Optional)
BACKUP_DB_HOST=your_backup_database_host
BACKUP_DB_PORT=5432
BACKUP_DB_NAME=cexplorer
BACKUP_DB_USERNAME=your_backup_database_username
BACKUP_DB_PASSWORD=your_secure_backup_database_password

# ===========================================
# Redis Configuration
# ===========================================
REDIS_CONNECTION_STRING=localhost:6379
REDIS_PASSWORD=your_redis_password_if_any

# ===========================================
# API Keys
# ===========================================
KOIOS_API_KEY=your_koios_api_key_here
CARDANO_KEY=your_cardano_key_here
DEEP_AI_KEY=your_deep_ai_key_here

# ===========================================
# CORS Configuration
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,https://your-frontend-domain.com

# ===========================================
# Application Settings
# ===========================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000

# ===========================================
# Security Settings
# ===========================================
API_KEY_PREFIX=cardano_
API_KEY_LENGTH=32
ENABLE_KEY_ROTATION=true
KEY_ROTATION_DAYS=90

# ===========================================
# Rate Limiting
# ===========================================
ENABLE_API_KEY_RATE_LIMITING=true
ENABLE_LOCALHOST_EXCLUSION=true

# ===========================================
# Health Check Settings
# ===========================================
ENABLE_HEALTH_CHECKS=true
ENABLE_HEALTH_CHECKS_UI=true
HEALTH_CHECK_EVALUATION_TIME=30

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=Information
LOG_FILE_RETENTION_DAYS=30
LOG_FILE_MAX_SIZE_MB=10

# ===========================================
# Performance Settings
# ===========================================
MAX_CONCURRENT_DB_OPERATIONS=8
CONNECTION_TIMEOUT_SECONDS=60
COMMAND_TIMEOUT_SECONDS=120

# ===========================================
# Docker Settings (for containerized deployment)
# ===========================================
DOTNET_GCServer=0
DOTNET_GCConcurrent=1
