{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ApiSettings": {
    "Title": "Cardano Main API",
    "Description": "Main API for Cardano blockchain data synchronization",
    "Version": "v1.0",
    "Contact": {
      "Name": "Cardano Development Team",
      "Email": "dev@cardano.com"
    },
    "License": {
      "Name": "MIT",
      "Url": "https://opensource.org/licenses/MIT"
    }
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://cardano-frontend.vercel.app",
      "https://cardanogov.cc"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "*" ]
  },
  "RateLimiting": {
    "EnableApiKeyRateLimiting": true,
    "ApiKeyRateLimiting": {
      "EnableCaching": true,
      "CacheExpirationMinutes": 5,
      "EnableDailyReset": true,
      "DailyResetTime": "00:00:00"
    },
    "EnableLocalhostExclusion": true
  },
  "CacheSettings": {
    "DefaultExpirationMinutes": 30,
    "MaxCacheSize": 1000
  },
  "CardanoKey": "YOUR_CARDANO_KEY",
  "DeepAIKey": "YOUR_DEEP_AI_KEY",
  "Koios": {
    "ApiKey": "YOUR_KOIOS_API_KEY"
  },
  "KOIOS": "YOUR_KOIOS_API_KEY",
  "AllowedHosts": "*",
  "Redis": {
    "ConnectionString": "YOUR_REDIS_CONNECTION_STRING",
    "InstanceName": "CardanoMainAPI:"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=YOUR_DB_HOST;Port=YOUR_DB_PORT;Database=YOUR_DB_NAME;Username=YOUR_DB_USERNAME;Password=YOUR_DB_PASSWORD;Include Error Detail=true;",
    "RedisConnection": "YOUR_REDIS_CONNECTION_STRING"
  },
  "HealthChecks": {
    "EnableHealthChecks": true,
    "EnableHealthChecksUI": true,
    "EvaluationTimeInSeconds": 30,
    "MinimumSecondsBetweenFailureNotifications": 60,
    "EnableDatabaseHealthCheck": true,
    "EnableRedisHealthCheck": true
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://your-frontend-domain.com"
    ]
  },
  "Swagger": {
    "Title": "Cardano Main API",
    "Description": "API for Cardano blockchain data and governance",
    "Version": "v1.0.0",
    "Contact": {
      "Name": "Cardano Team",
      "Email": "api@cardano.org"
    }
  },
  "ApiKeySettings": {
    "DefaultKeyLength": 32,
    "KeyPrefix": "cardano_",
    "EnableKeyRotation": true,
    "KeyRotationDays": 90,
    "EnableUsageLogging": true,
    "MaxKeysPerUser": 10
  },
  "ScheduledWarmup": {
    "EnableScheduledWarmup": true,
    "WarmupTime": "00:01:00",
    "BaseUrl": "https://localhost:5001",
    "RequestTimeoutSeconds": 30,
    "EnableLogging": true,
    "MaxConcurrentRequests": 10
  }
}
